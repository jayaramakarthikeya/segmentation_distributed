{
    "name": "PSPNet",
    "n_gpu": 1,
    "use_synch_bn": false,
    "device_type": "cpu",

    "arch": {
        "type": "PSPNet",
        "args": {
            "backbone": "resnet101",
            "freeze_bn": false,
            "freeze_backbone": false
        }
    },

    "optimizer": {
        "type": "Adam",
        "differential_lr": true,
        "args":{
            "lr": 0.01,
            "weight_decay": 0.0001
        }
    },

    "loss": "FocalLoss",
    "ignore_index": 255,
    "lr_scheduler": {
        "type": "Poly",
        "args": {}
    },

    "trainer": {
        "epochs": 180,
        "save_dir": "saved/",
        "save_period": 10,
        "tensorboard_log_step": 1,
  
        "monitor": "max Mean_IoU",
        "early_stop": 10,
        
        "tensorboard": true,
        "log_dir": "saved/runs",
        "log_per_iter": 20,

        "val": true,
        "val_per_epochs": 5
    }
}