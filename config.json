{
    "name": "PSPNet",
    "n_gpu": 1,
    "use_synch_bn": false,
    "device_type": "cpu",

    "arch": {
        "type": "PSPNet",
        "args": {
            "backbone": "resnet101",
            "freeze_bn": false,
            "freeze_backbone": false
        }
    },

    "optimizer": {
        "type": "SGD",
        "differential_lr": true,
        "args":{
            "lr": 0.01,
            "weight_decay": 0.0001,
            "momentum": 0.9,
            "nesterov": "True"
        }
    },

    "loss": "FocalLoss",
    "ignore_index": -1,
    "lr_scheduler": {
        "type": "Poly",
        "args": {}
    },

    "trainer": {
        "epochs": 30,
        "save_dir": "saved/",
        "save_period": 10,
        "tensorboard_log_step": 1,
  
        "monitor": "max Mean_IoU",
        "early_stop": 5,
        
        "tensorboard": true,
        "log_dir": "saved/runs",
        "log_per_iter": 20,

        "val": true,
        "val_per_epochs": 2
    }
}